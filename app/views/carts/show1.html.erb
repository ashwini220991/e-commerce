<h1 class="jumbotron">Your Shopping Cart!
</h1>
<div class="container">
<div class="row">
<table class="table">
<thead>
<th>Name</th>
<th>Price</th>
<th>Quantity</th>
<th>Subtotal</th>
</thead><tbody>
<% @cart_products_with_qty.each do |array|
product = array[0]
qty = array[1]
 %><tr>
<td class="align-middle"><%= ::Temple::Utils.escape_html((product.name)) %>
</td><td class="align-middle"><%= ::Temple::Utils.escape_html((product.price)) %>
</td><td class="align-middle"><%= ::Temple::Utils.escape_html((qty)) %>
</td><td class="align-middle"><%= ::Temple::Utils.escape_html((product.price * qty.to_i)) %>
</td><td class="align-middle">
<%= ::Temple::Utils.escape_html((link_to '+', add_to_cart_path(product), method: :put, class: "btn")) %>
<%= ::Temple::Utils.escape_html((link_to '-', remove_one_cart_path(product), method: :put, class: "btn")) %>
<%= ::Temple::Utils.escape_html((link_to 'Remove', remove_from_cart_path(product), method: :put, class: "btn btn-danger")) %>

</td></tr><% end %><tr class="font-weight-bold">
<td colspan="3">
<h5>Total</h5>
</td><td>
<h5><%= ::Temple::Utils.escape_html((@cart_total)) %>

</h5></td></tr></tbody></table></div><%= ::Temple::Utils.escape_html((link_to "Checkout", new_transaction_path, class: "btn btn-success" unless current_user.get_cart_products_with_qty.blank?)) %>
</div>
